# Environment Variables Example
# Copy this file to .env and fill in your values

# ========== Database Configuration ==========
# For PostgreSQL (Production)
DATABASE_URL=postgresql://lis_user:lis_secure_password@localhost:5432/lis_db

# For SQLite (Development) - uncomment to use
# DATABASE_URL=sqlite:///lab.db

# ========== PostgreSQL Configuration ==========
POSTGRES_USER=lis_user
POSTGRES_PASSWORD=lis_secure_password
POSTGRES_DB=lis_db
POSTGRES_PORT=5432

# ========== Backend Configuration ==========
SECRET_KEY=your-super-secret-key-change-this-in-production-use-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=1440
BACKEND_PORT=8000

# ========== Frontend Configuration ==========
VITE_API_URL=http://localhost:3000/api
FRONTEND_PORT=3000

# ========== Docker Configuration ==========
# Set these for docker-compose.yml
COMPOSE_PROJECT_NAME=lis
